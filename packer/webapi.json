{
  "description": "Create a image",
  "variables": {
    "home": "{{env `REPOSITORY`}}",
    "project_id": "{{env `PROJECT_ID`}}",
    "zone": "{{env `ZONE`}}",
    "env": "{{env `ENV`}}",
    "version": "{{env `VERSION`}}",
    "credentials": "{{env `GCP_CREDENTIALS`}}",
    "MONGODB_URI": "{{ env `MONGODB_URI` }}",
    "SALT": "{{ env `SALT` }}",
    "SECRET": "{{ env `SECRET` }}",
    "ISSUER": "{{ env `ISSUER` }}",
    "AUDIENCE": "{{ env `AUDIENCE` }}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `credentials`}}",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu",
      "name": "{{user `env`}}-webapi-{{user `version`}}",
      "image_name": "{{user `env`}}-webapi-{{user `version`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt update",
        "sudo apt install python-pip -y",
        "sudo pip install ansible",
        "export ANSIBLE_HOST_KEY_CHECKING=False",
        "export PORT=80",
        "export MONGODB_URI={{ user `MONGODB_URI` }}",
        "export SALT={{ user `SALT` }}",
        "export SECRET='{{ user `SECRET` }}'",
        "export ISSUER={{ user `ISSUER` }}",
        "export AUDIENCE={{ user `AUDIENCE` }}",
        "export EXPIRE_IN_MINUTES=240"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{user `home`}}/ansible/setup.yml",
      "only": [
        "{{user `env`}}-webapi-{{user `version`}}"
      ]
    }
  ]
}